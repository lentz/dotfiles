[init]
  templatedir = ~/.git_template
[alias]
  s = status
  co = checkout
  ci = commit
  p = pull
  d = diff
  ds = diff --staged
  ls = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(red)%h%C(reset) %C(auto)%d%C(reset) %C(white)%s%C(reset) %C(green)(%ar)%C(reset) - %C(cyan)%an%C(reset)'
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%an]" --decorate --numstat
  amend = commit --amend
  fpush = push --force-with-lease
[push]
  default = simple
  followTags = true
[pull]
  rebase = true
[fetch]
  prune = true
[rebase]
  autoSquash = true
  autoStash = true
[core]
  editor = vim
[include]
  path = ~/.gitconfig.local
